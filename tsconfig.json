{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es2017", "es7", "es6", "dom"]
  },
  "types": [
    "jasmine",
    "node",
    "mocha",
    "chai"
  ],
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "coverage",
    "lib/**/*.spec.ts",
    "node_modules",
    "!node_modules/@types"
  ]
}
